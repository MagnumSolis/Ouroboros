# =============================================================================
# SAHAYAK - Environment Variables
# Copy this file to .env and fill in your API keys
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Providers (Required: at least one)
# -----------------------------------------------------------------------------

# Groq API - Primary LLM (https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini - Multimodal backup (https://aistudio.google.com)
GEMINI_API_KEY=your_gemini_api_key_here

# -----------------------------------------------------------------------------
# Embeddings (Optional - falls back to local Sentence Transformers)
# -----------------------------------------------------------------------------

# Cohere API - Production embeddings (https://dashboard.cohere.com)
COHERE_API_KEY=your_cohere_api_key_here

# -----------------------------------------------------------------------------
# Speech-to-Text (Optional - falls back to local Whisper)
# -----------------------------------------------------------------------------

# Deepgram API - Real-time STT (https://console.deepgram.com)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# -----------------------------------------------------------------------------
# Vector Database
# -----------------------------------------------------------------------------

# Qdrant (local Docker by default)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=  # Leave empty for local Docker

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Default language for vernacular support
DEFAULT_LANGUAGE=hi

# LLM Model preferences
GROQ_MODEL=llama-3.3-70b-versatile
GEMINI_MODEL=gemini-1.5-flash
